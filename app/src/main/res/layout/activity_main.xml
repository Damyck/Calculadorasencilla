<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marc.calculadora.UI1">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/n1"
        android:hint="Introduce el primer número"
        android:layout_marginBottom="53dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/n2"
        android:hint="Introduce el segundo número"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="74dp"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="120dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp">


        <RadioButton
        android:id="@+id/suma"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="Suma"
            android:onClick="getOp"/>
        <RadioButton
            android:id="@+id/resta"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="119dp"
            android:layout_marginTop="0dp"
            android:text="Resta"
            android:onClick="getOp"/>
        <RadioButton
        android:id="@+id/multiplicacion"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="Multiplicación"
            android:onClick="getOp"/>
        <RadioButton
            android:id="@+id/division"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="119dp"
            android:layout_marginTop="0dp"
            android:text="División"
            android:onClick="getOp"/>

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/result"
        android:numeric="decimal|integer|signed"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce los números y la operación!"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/iniciar"
        android:text="Calcula!"
        android:onClick="calculate"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"

        android:id="@+id/borrar"
        android:text="Borra!!"
        android:onClick="erase"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="400dp"
        android:id="@+id/magic"
        android:text="Quiero ver Magia!"
        android:onClick="magic"/>

</RelativeLayout>
